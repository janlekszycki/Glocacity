<% layout('./layouts/boilerplate') -%>
    <div class="row">

        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h2 class="card-title">Edit Range</h2>
                        </div>
                        <div class="col text-end"> <a
                                class="text-end link-warning link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover"
                                href="/ranges/<%= range._id  %>">
                                <i class="bi bi-skip-backward"></i>
                                back to Range
                            </a></div>
                    </div>
                    <form action="/ranges/<%= range._id %>?_method=PUT" method="POST" class="needs-validation"
                        enctype="multipart/form-data" novalidate>
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="range[title]"
                                value="<%= range.title  %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" class="form-control" id="location" name="range[location]"
                                value="<%= range.location  %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="">$</span>
                                <input type="text" class="form-control" id="price" name="range[price]"
                                    value="<%= range.price  %>" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea name="range[description]" class="form-control" id="description" cols="30"
                                rows="10" required><%= range.description  %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Add Images</label>
                            <input class="form-control" type="file" id="image" name="image" multiple>
                        </div>
                        <div class="mb-3">
                            <% range.images.forEach((image, i)=> {%>
                                <img src="<%= image.thumbnail %>" class="img-thumbnail" alt="">
                                <div class="form-check-inline mb-3">
                                    <input class="form-check-input" type="checkbox" id="image-<%=i%>"
                                        name="deleteImages[]" value="<%= image.filename %>">
                                    <label class="form-check-label" for="image-<%=i%>">
                                        <i class="bi bi-trash h4"></i>
                                    </label>
                                </div>
                                <% }); %>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-success">Update Range</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>