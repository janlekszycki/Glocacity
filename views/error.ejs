<% layout('layouts/boilerplate') -%>

    <div class="row">
        <div class="col-8 offset-2">
            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">
                    <%= status %>
                </h4>

                <p>
                    <%= err %>
                </p>
                <% if (process.env.NODE_ENV!=="production" ) { %>
                    <hr>
                    <p class="text-break">
                        <%= err.stack %>
                    </p>
                    <% } %>
            </div>
        </div>
    </div>